extends ../layout

block content
  .page-header
    h3 Lesson description
    label Lesson ID:
    h4=lesson._id
    label Lesson Name:
    h4=lesson.name
    label Lesson Description:
    h4=lesson.description

    table
        tr
            td(style={'font-weight': 'bold','font-size':'24px'}) Name
            td(style={'font-weight': 'bold','font-size':'24px'}) Description
        each task in tasks
            tr
                td(style={'border': '1px solid black','padding':'4px', 'float':'left','width':'250px'})
                    a(style={'text-decoration': 'none','color':'blue'} href=`/tasks/${task._id}`) #{task.name}
                td(style={'text-decoration': 'none','color':'black','border': '1px solid black','padding':'4px', 'width':'700px'}) #{task.description} </br>
