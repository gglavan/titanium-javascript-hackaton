extends ../layout

block content
  .page-header
    h3 Lesson Form

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Lesson name
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true)
    //- .form-group
    //-   label(class='col-sm-2 control-label', for='email') Email
    //-   .col-sm-8
    //-     input.form-control(type='text', name='email', id='email')
    .form-group
      label(class='col-sm-2 control-label', for='message') Lesson description
      .col-sm-8
        textarea.form-control(name='description', id='message', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit') Add lesson  
          i.fa.fa-plus-square